# Environment Configuration for Mantle2
# Copy this file to .env and update values as needed

# Application Environment
APP_ENV=development
APP_DEBUG=true

# Database Configuration (for non-DDEV setups)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mantle2
DB_USER=drupal
DB_PASSWORD=drupal

# Hash Salt (generate a unique value for each environment)
DRUPAL_HASH_SALT=your-unique-hash-salt-here

# Trusted Host Patterns (comma-separated)
TRUSTED_HOST_PATTERNS=localhost,*.ddev.site

# File Paths
PUBLIC_FILES_PATH=sites/default/files
PRIVATE_FILES_PATH=../private

# Cache Settings
CACHE_ENABLED=false
CSS_AGGREGATION=false
JS_AGGREGATION=false

# Email Configuration
MAIL_BACKEND=test
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# External Service URLs
API_BASE_URL=https://api.example.com
CDN_BASE_URL=https://cdn.example.com

# Logging
LOG_LEVEL=debug
LOG_ERRORS=true