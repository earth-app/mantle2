# Environment Configuration for Mantle2
# Copy this file to .env and update values as needed

# Application Environment
APP_ENV=development
APP_DEBUG=true

# Database Configuration (Postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=earth
POSTGRES_USER=earth
POSTGRES_PASSWORD=earth

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# S3/MinIO Configuration
S3_ENDPOINT=http://minio:9000
S3_BUCKET=earth
S3_ACCESS_KEY=minio
S3_SECRET_KEY=miniosecret

# AI Provider Configuration
DRUPAL_AI_PROVIDER=openrouter
DRUPAL_AI_MODEL_TEXT=meta-llama/llama-3.1-8b-instruct:free
DRUPAL_AI_MODEL_EMBED=text-embedding-3-large
PROVIDER_API_KEY=
AI_ENABLE_LIVE=false

# Hash Salt (generate a unique value for each environment)
DRUPAL_HASH_SALT=your-unique-hash-salt-here

# Trusted Host Patterns (comma-separated)
TRUSTED_HOST_PATTERNS=localhost,127.0.0.1,earth-app.local

# File Paths
PUBLIC_FILES_PATH=sites/default/files
PRIVATE_FILES_PATH=../private

# Cache Settings
CACHE_ENABLED=true
CSS_AGGREGATION=false
JS_AGGREGATION=false

# Email Configuration
MAIL_BACKEND=test
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# External Service URLs
API_BASE_URL=https://api.earth-app.com
CDN_BASE_URL=https://cdn.earth-app.com

# Logging
LOG_LEVEL=debug
LOG_ERRORS=true

# Queue Configuration
QUEUE_BACKEND=redis
QUEUE_DEFAULT=default